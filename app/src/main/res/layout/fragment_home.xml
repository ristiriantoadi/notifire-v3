<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="40dp">
        <ImageButton
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/ic_action_button_next"/>
        <ImageButton
            android:id="@+id/buttonPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/ic_action_button_prev"/>
        <TextView
            android:id="@+id/namaNotifire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Notifire 1"/>
        <ImageView
            android:id="@+id/statusNotifire"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/namaNotifire"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_action_status_aman"/>
        <TextView
            android:id="@+id/labelStatusNotifire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusNotifire"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Status: Aman"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/buttonTelepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/labelStatusNotifire"
            android:layout_marginTop="20dp"
            android:text="Hubungi Pemadam Kebakaran"
            android:textColor="#fff"
            android:backgroundTint="#FB0200"/>
    </RelativeLayout>

</RelativeLayout>